@model ProjetoVendas2.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<div class="info">
    <h1>Cadastrar</h1>

    <h4>Venda</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VendaValorTotal" class="control-label"></label>
                    <input asp-for="VendaValorTotal" class="form-control" />
                    <span asp-validation-for="VendaValorTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VendaData" class="control-label"></label>
                    <input asp-for="VendaData" class="form-control" />
                    <span asp-validation-for="VendaData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="VendedorId" class="control-label"></label>
                    <select asp-for="VendedorId" class="form-control" asp-items="ViewBag.VendedorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PagamentoId" class="control-label"></label>
                    <select asp-for="PagamentoId" class="form-control" asp-items="ViewBag.PagamentoId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
