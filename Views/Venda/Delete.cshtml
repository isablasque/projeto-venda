@model ProjetoVendas2.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<div class="info">
    <h1>Excluir</h1>

    <h3>Tem certeza que deseja excluir isso?</h3>
    <div>
        <h4>Venda</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VendaValorTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendaValorTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VendaData)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VendaData)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.ClienteNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vendedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vendedor.VendedorNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pagamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pagamento.PagamentoForma)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>

</div>
