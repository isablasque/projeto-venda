@model ProjetoVendas2.Models.VendaHasProduto

@{
    ViewData["Title"] = "Create";
}

<div class="info">
    <h1>Cadastrar</h1>

    <h4>VendaHasProduto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VendaId" class="control-label"></label>
                    <select asp-for="VendaId" class="form-control" asp-items="ViewBag.VendaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="VendaHasQuantidade" class="control-label"></label>
                    <input asp-for="VendaHasQuantidade" class="form-control" />
                    <span asp-validation-for="VendaHasQuantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
