@model IEnumerable<ProjetoVendas2.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="info">
    <h1>Categoria</h1>

    <p>
        <a asp-action="Create">Cadastrar</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaNome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaNome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Exluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

