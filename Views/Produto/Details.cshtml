@model ProjetoVendas2.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<div class="info">
    <h1>Detalhes</h1>

    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoNome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoPreco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoPreco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoQuantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoQuantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.CategoriaNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.FornecedorNome)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
        <a asp-action="Index">Voltar</a>
    </div>

</div>
