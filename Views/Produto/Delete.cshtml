@model ProjetoVendas2.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<div class="info">
    <h1>Excluir</h1>

    <h3>Tem certeza que deseja excluir isso?</h3>
    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoNome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoPreco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoPreco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdutoQuantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdutoQuantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.CategoriaNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.FornecedorNome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>

</div>
